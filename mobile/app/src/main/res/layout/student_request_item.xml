<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="ViewModel"
            type="com.androidexam.shubclassroom.viewmodel.class_detail.teacher.RequestViewModel" />
    </data>
    <com.google.android.material.card.MaterialCardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardElevation="5dp"
        app:strokeWidth="2dp"
        app:strokeColor="@color/light_blue"
        app:cardUseCompatPadding="true"
        android:layout_marginVertical="5dp"
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <de.hdodenhof.circleimageview.CircleImageView
                android:src="@drawable/user_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"/>
            <LinearLayout
                android:layout_marginHorizontal="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:text="@{ViewModel.requestIn4.student.name}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <Button
                        android:onClick="@{() -> ViewModel.onClickAcceptRequest()}"
                        android:textAllCaps="false"
                        android:text="Chấp nhận"
                        android:layout_marginLeft="20dp"
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"/>
                    <Button
                        android:onClick="@{() -> ViewModel.onClickRejectRequest()}"
                        android:layout_marginLeft="20dp"
                        android:layout_gravity="right"
                        android:textColor="@color/black"
                        android:backgroundTint="#DDDDDD"
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:text="Xoá"
                        android:textAllCaps="false"
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>
