<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    >
    <data>
        <variable
            name="ClassMemberItemViewModel"
            type="com.androidexam.shubclassroom.viewmodel.ClassMemberItemViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/iv_studentavatar"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@{ClassMemberItemViewModel.studentDTO.avatar}"></ImageView>

        <TextView
            android:id="@+id/tv_studentname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@{ClassMemberItemViewModel.studentDTO.name}"
            android:textSize="18sp"></TextView>
    </LinearLayout>
</layout>